<form id="profile" class="profile" action="/profile" method="POST" enctype="multipart/form-data">
     <img draggable="false" src="<%= @pfp %>" id="preview" onclick="chooseFile()">
     <input id="image-upload" type="file" accept="image/*" name="pfp" onchange="loadPreviewImage(event)">
     <p id="username">
      <%= @user_session.username %>
     </p>
</form>
<div class="stats-container">
  <span>
    <p>
      Hosted
    </p>
    <p>
      <%= @user_stats[:hosted] %>
    </p>
  </span>
  <span>
    <p>
      Attended
    </p>
    <p>
      <%= @user_stats[:attended] %>
    </p>
  </span>
</div>

<script src="/javascripts/loadPreviewImage.js"></script>
<script src="/javascripts/chooseFile.js"></script>
<script src="/javascripts/submitOnUpload.js"></script>