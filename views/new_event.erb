<div class="ne-container-mob">
  <form class="new-event" action="/events/create" method="post" enctype="multipart/form-data">
    <label class="inp order-0" for="title">
      <input name="title" type="text" value="<%= params[:title] || '' %>" placeholder="" required>
      <span class="label">Title</span>
      <span class="focus-bg"></span>
    </label>
    <label class="inp order-3" for="location">
      <input name="location" type="text" value="<%= params[:location] || '' %>" placeholder="" required>
      <span class="label">Location</span>
      <span class="focus-bg"></span>
    </label>
    <div class="datetime order-2">
      <input name="date" type="date" value="<%= params[:date] || '' %>" min="<%= Date.today.to_s %>" required>
      <span></span>
      <input name="time-start" type="time" step="900" value="<%= params[:'time-start'] || '' %>" required>
      <input name="time-end" type="time" step="900" value="<%= params[:'time-end'] || '' %>" required>
    </div>
    <label class="inp order-4" for="description">
      <textarea name="description" placeholder=""><%= params[:description] || '' %></textarea>
      <span class="label" >Description</span>
      <span class="focus-bg"></span>
    </label>
      <input class="save-event-btn" type="submit" value="Save">
    <div class="image-upload-container order-1">
      <div class="image-upload" onclick="chooseFile()">
        <img id="preview-mob" class="image-upload-preview">
        <input id="image-upload" class="image-upload-btn" type="file" accept="image/*" name="event-image" onchange="loadPreviewImage(event)">
      </div>
    </div>
  </form>
  <span class="bottom-spacing order-5" ></span>
</div>

